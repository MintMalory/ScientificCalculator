<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/linearLayout_margin"
    android:layout_marginRight="@dimen/linearLayout_margin"
    android:layout_marginTop="@dimen/linearLayout_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="@dimen/textSize_sp_land" />

    <TextView
        android:id="@+id/textView_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:padding="6dp"
        android:text=""
        android:textSize="@dimen/textSize_sp_land" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exp"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

        <Button

            android:id="@+id/btn_procent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u0025"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x!"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_l_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="("
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_r_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=")"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u232B"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="del"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

    </LinearLayout>
    ​

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mod"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="@dimen/textSize_sp_land" />​

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@dimen/textSize_sp_land" />​

        <Button
            android:id="@+id/btn_divided"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="@dimen/textSize_sp_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u03C0"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cos"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u00D7"
            android:textSize="@dimen/textSize_sp_land" />

    </LinearLayout>
    ​

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="e"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_sqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u221A"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_deduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/textSize_sp_land" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_x_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x^10"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_x_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x^2"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_dubl_ziro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_ziro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="@dimen/textSize_sp_land" />

        <Button
            android:id="@+id/btn_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\u002E"
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_equally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="@dimen/textSize_sp_land" />
        ​

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="@dimen/textSize_sp_land" />

    </LinearLayout>
</LinearLayout>